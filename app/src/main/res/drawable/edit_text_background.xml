<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/perple" /> <!-- Border color when focused -->
            <solid android:color="#FFFFFF" /> <!-- Background color when focused -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Border color -->
            <solid android:color="#FFFFFF" /> <!-- Default background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>
